@model Kokos_Models.ViewModels.ProductUserVM 

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Сведения о заказе
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm">Назад к корзине</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Данные пользователя:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Имя</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Телефон</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.PhoneNumber" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="ApplicationUser.Email" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                @if (User.IsInRole(Kokos_Utility.WebConstants.AdminRole))
                                {
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Улица</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.StreetAddress" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Город</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.City" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Регион</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.Region" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.Region" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Почтовый индекс</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.PostalCode" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                        </div>
                                    </div>

                                }
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Сведения о заказе:</span>
                                    </h4>
                                    <ul class="list-group mb-3">

                                        @{var orderTotal = 0.0; }

                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].Id" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Price" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].TempQuantity" />

                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                    @if (User.IsInRole(Kokos_Utility.WebConstants.AdminRole))
                                                    {
                                                        <small class="text-muted">Цена: @Model.ProductList[i].Price.ToString("c") | </small>
                                                        <small class="text-muted">Количество: @Model.ProductList[i].TempQuantity шт.</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Цена: @Model.ProductList[i].Price.ToString("c")</small>

                                                    }
                                                </div>
                                                @if (User.IsInRole(Kokos_Utility.WebConstants.AdminRole))
                                                {
                                                    <span class="text-muted">
                                                        @(String.Format("{0:c}",
                                                            Model.ProductList[i].Price * Model.ProductList[i].TempQuantity))
                                                    </span>
                                                }
                                            </li>
                                            orderTotal += Model.ProductList[i].Price * Model.ProductList[i].TempQuantity;
                                        }

                                        @if (User.IsInRole(Kokos_Utility.WebConstants.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between bg-light">
                                                <small class="text-info">Общая стоимость заказа: </small>
                                                <strong class="text-info">@orderTotal.ToString("c")</strong>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(Kokos_Utility.WebConstants.AdminRole))
                            {
                                <button id="submit-button" class="btn btn-success form-control">Создать заказ</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Отправить запрос</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}